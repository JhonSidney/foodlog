<% content_for :title do %>
  FoodLog &ndash; <%= DateTime.now %>
<% end %>

 <div class="columns mt-6  is-centered">
    <% @entries.each do |entry| %>
     <div class="colum is-one-quarter">
       <div class="card">
         <header class=" card-header">
           <%= entry.meal_type %>
         </header>
         <div class="card-content">
           <div class="content">
             <p><span class="has-text-weight-bold"><%=entry.calories %></span> Calories</p>
             <p><span class="has-text-weight-bold"><%= entry.proteins %></span> Grams of protein</p>
             <p><span class="has-text-weight-bold"><%= entry.carbohydrates %></span> Grams of carbohydrates</p>
             <p><span class="has-text-weight-bold"><%= entry.fats %></span></p>
             <p><span class="has-text-weight-bold">   </span></p>
           </div>
         </div>

         <%= entry.meal_type %>
         <%= entry.calories %>
         <%= entry.proteins %>
         <%= entry.carbohydrates %>
         <%= entry.fats %>
         <%= link_to 'Show', entry %>
         <%= link_to 'Edit', edit_entry_path(entry) %>
         <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %>
   <% end %>

       <div>
     <div>
 </div>